
.page{
	background: #f6f8fb;
	min-height: 100vh;
	padding: 20rpx;
}

.back{
	background: transparent;
	border: none;
	color: #1f2937;
	font-size: 26rpx;
}
.card{
	background: #fff;
	border-radius: 14rpx;
	padding: 24rpx;
	box-shadow: 0 10rpx 30rpx rgba(31,45,61,0.06);
}
.header{
	display: flex;
	gap: 18rpx;
	align-items: center;
}
.avatar{
	width: 140rpx;
	height: 140rpx;
	border-radius: 12rpx;
	background: #e6eef7;
	object-fit: cover;
}
.info{
	flex: 1;
}
.name{
	font-size: 34rpx;
	font-weight: 700;
	color: #0f1724;
}
.meta{
	margin-top: 8rpx;
	color: #6b7280;
	font-size: 24rpx;
	display: flex;
	align-items: center;
	gap: 8rpx;
}
.tag{
	background: linear-gradient(90deg,#fef3c7,#fde68a);
	padding: 6rpx 10rpx;
	border-radius: 8rpx;
	font-size: 20rpx;
	color: #92400e;
	font-weight: 700;
}
.dot{ color:#d1d5db }
.subjects{ margin-top: 8rpx; color:#374151; font-size:24rpx }
.divider{ height:1rpx; background:#f1f5f9; margin:16rpx 0 }
.section{ margin-bottom:14rpx }
.section-title{ font-weight:700; color:#0f1724; font-size:26rpx }
.section-body{ color:#4b5563; font-size:24rpx; margin-top:8rpx; line-height:1.6 }
.two-cols{ display:flex; gap:18rpx }
.footer{ display:flex; justify-content:center; margin-top:12rpx }
.contact{

	padding: 12rpx 40rpx;
	border-radius: 12rpx;
	font-size: 28rpx;
  
	border: none;
}
.contact:active{
	transform: translateY(1rpx);
	color: #95ec69;
}

@media screen and (max-width:340px){
	.avatar{ width:110rpx; height:110rpx }
	.name{ font-size:30rpx }
}

