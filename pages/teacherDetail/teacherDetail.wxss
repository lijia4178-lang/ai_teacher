.detail-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 80rpx;
}

/* 导航栏样式 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
  padding: 16rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  padding: 10rpx 20rpx;
  color: #07c160;
  font-size: 32rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.placeholder {
  width: 80rpx;
}

/* 老师信息卡片 */
.teacher-card {
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.teacher-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.teacher-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #07c160;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 48rpx;
  font-weight: bold;
  margin-right: 30rpx;
}

.teacher-basic-info {
  flex: 1;
}

.teacher-name {
  font-size: 44rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 10rpx;
}

.teacher-subject {
  font-size: 32rpx;
  color: #666666;
}

/* 详细信息 */
.teacher-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 15rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  transition: background-color 0.2s;
}

.teacher-item:active {
  background-color: #f5f5f5;
}

.teacher-info {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  flex: 1;
}
.tea-head{
  font-size:medium;
  color:rgb(202, 174, 50);

}
.info-font{
  width: 90rpx;
  font-weight: bold;

}
.tea-title{
  display: flex;
}
.tea-item{
  width: 200rpx;
}
.tea-desc{
  width: 200rpx;
}
.center-item{
  display: flex;
  justify-content: center;
}