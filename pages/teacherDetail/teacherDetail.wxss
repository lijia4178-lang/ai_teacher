.detail-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 80rpx;
}

/* 导航栏样式 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
  padding: 16rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  padding: 10rpx 20rpx;
  color: #07c160;
  font-size: 32rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.placeholder {
  width: 80rpx;
}

/* 老师信息卡片 */
.teacher-card {
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.teacher-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.teacher-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #07c160;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 48rpx;
  font-weight: bold;
  margin-right: 30rpx;
}

.teacher-basic-info {
  flex: 1;
}

.teacher-name {
  font-size: 44rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 10rpx;
}

.teacher-subject {
  font-size: 32rpx;
  color: #666666;
}

/* 详细信息 */
.teacher-details {
  border-top: 2rpx solid #f0f0f0;
  padding-top: 30rpx;
  margin-bottom: 30rpx;
}

.detail-item {
  display: flex;
  margin-bottom: 24rpx;
  font-size: 32rpx;
}

.detail-label {
  color: #666666;
  width: 200rpx;
}

.detail-value {
  color: #333333;
  flex: 1;
}

/* 教学优势 */
.advantages-section {
  border-top: 2rpx solid #f0f0f0;
  padding-top: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  display: block;
}

.advantage-content {
  font-size: 32rpx;
  color: #666666;
  line-height: 52rpx;
  white-space: pre-line;
}

/* 底部联系按钮 */
.bottom-action {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.contact-button {
  background-color: #07c160;
  color: #ffffff;
  border: none;
  border-radius: 8rpx;
  font-size: 36rpx;
  padding: 20rpx 0;
  width: 100%;
}

.contact-button:active {
  background-color: #06a854;
}