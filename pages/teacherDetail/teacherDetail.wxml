<view class="page">


  <view class="card">
    <view class="header">
      <image class="avatar" src="{{teacher.image_url || '/images/teacher2.jpg'}}" mode="cover" />
      <view class="info">
        <view class="name">{{teacher.name}}</view>
        <view class="meta">
          <text class="tag">{{teacher.sort}}</text>
          <text class="dot">·</text>
          <text>{{teacher.teaching_age}}年教龄</text>
          <text class="dot">·</text>
          <text>{{teacher.price_range}}元/小时</text>
        </view>
        <view class="subjects">教授：{{teacher.subjects && teacher.subjects.join('、') || teacher.subjects}}</view>
      </view>
    </view>

    <view class="divider"></view>

    <view class="section">
      <view class="section-title">教师简介</view>
      <view class="section-body">{{teacher.desc}}</view>
    </view>

    <view class="section">
      <view class="section-title">近期上课</view>
      <view class="section-body">{{teacher.latest_class_desc}}</view>
    </view>

    <view class="section two-cols">
      <view>
        <view class="section-title">学校</view>
        <view class="section-body">{{teacher.school}}</view>
      </view>
      <view>
        <view class="section-title">地址</view>
        <view class="section-body">{{teacher.location}}</view>
      </view>
    </view>

    <view class="section">
      <view class="section-title">家长评价</view>
      <view class="section-body">{{teacher.parents_review}}</view>
    </view>

    <view class="footer">
      <button class="contact" type="primary" bindtap="contactTeacher">购买课程</button>
    </view>
  </view>
</view>


