/* AI老师聊天页面样式 - 重新设计以支持输入框完全显示 */
.chat-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
  /* 允许页面内容溢出时可以滚动 */
  overflow: hidden;
}

/* 顶部标题栏 - 固定高度 */
.header {
  height: 88rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  /* 确保标题栏固定在顶部 */
  position: relative;
  z-index: 10;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.header-actions {
  display: flex;
  align-items: center;
}

.more-icon {
  font-size: 36rpx;
  margin-right: 30rpx;
  color: #666666;
}

.moon-icon {
  font-size: 32rpx;
  color: #666666;
}

.chat-content {
  /* 使用flex布局占据剩余空间，自动适应输入区域高度变化 */
  flex: 1;
  padding: 15rpx;
  box-sizing: border-box;
  overflow-y: scroll;
  /* 移除固定高度计算，让flex布局自动管理空间 */
  min-height: 0;
}

.message-wrapper {
  margin-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
}

/* AI消息 - 头像在左侧 */
.ai-message {
  justify-content: flex-start;
}

/* 用户消息 - 头像在右侧 */
.user-message {
  justify-content: flex-end;
}

.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  overflow: hidden;
  flex-shrink: 0;
}

/* AI头像样式 - 左侧 */
.ai-message .message-avatar {
  order: 1;
  margin-right: 10rpx;
}

/* 用户头像样式 - 右侧 */
.user-message .message-avatar {
  order: 2;
  margin-left: 10rpx;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: white;
}

.user-avatar {
  background-color: #07c160; /* 微信绿 */
}

.ai-avatar {
  background-color: #06a854; /* 深绿色 */
}

/* 消息内容 */
.message-content {
  max-width: 100%;
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  word-wrap: break-word;
  line-height: 1.5;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

/* 打字指示器样式 */
.typing-indicator {
  display: flex;
  gap: 8rpx;
  align-items: center;
  margin-top: 10rpx;
}

/* 预设按钮条（水平可滑动） */
.preset-bar {
  height: 80rpx;
  padding: 5rpx 15rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  overflow-x: auto; /* 确保可以水平滚动 */
  white-space: nowrap; /* 防止容器内换行 */
}
.preset-list {
  display: flex;
  align-items: center;
  border:1rpx #ffffff;
  flex-wrap: nowrap; /* 确保项目不会换行 */
  min-width: max-content; /* 确保容器宽度足够容纳所有项目 */
}
.preset-btn {
  margin-right: 14rpx;
  background: #f7f7f8;

  font-size: 28rpx;
  /* 不允许换行，文字在x方向展开 */
  white-space: nowrap;
  word-break: normal;
  /* 移除max-width限制，允许按钮根据内容扩展 */
  display: inline-flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  border: none;
  flex-shrink: 0; /* 防止按钮被压缩 */
}
.preset-btn.active {
  background: #07c160;
  color: #fff;
}

