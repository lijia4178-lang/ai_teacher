
/* pages/my_teacher/my_teacher.wxss */

/* container */
.page {
  padding: 20rpx;
  background: #f7f8fb;
  min-height: 100vh;
}

/* customize van-card appearance */
.van-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(34, 34, 34, 0.06);
  overflow: hidden;
}
.van-card__thumb img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

/* header / title area */
.biger-font {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2d3d;
}

.tea-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.tea-item {
  display: flex;
  align-items: center;
  flex: 1;
  gap: 10rpx;
}

.info-font {
  width: 88rpx;
  color: #6b7280;
  font-weight: 600;
}

.tea-desc,
.center-item {
  color: #4b5563;
  font-size: 26rpx;
  margin-top: 10rpx;
}

.tea-desc {
  line-height: 1.6;
}

/* tag spacing */
.van-tag {
  margin-left: 12rpx;
}

/* small helpers */
.meta-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  color: #9ca3af;
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* responsive adjustments */
@media screen and (max-width: 340px) {
  .van-card__thumb img { width: 96rpx; height: 96rpx; }
  .biger-font { font-size: 28rpx; }
}

