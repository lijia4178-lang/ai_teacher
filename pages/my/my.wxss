/* 我的页面样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-section {
  display: flex;
  align-items: center;
  padding: 40rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  overflow: hidden;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  color: white;
  background-color: #FFF3E0; /* 微信绿 */
  border-radius: 70rpx;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.login-btn {
  margin-left: auto;
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #FFF3E0;
  color: white;
}

.user-info {
  margin-left: 30rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 28rpx;
  color: #999;
}

/* 手机号区域 */
.phone-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.phone-item {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.phone-label {
  font-size: 32rpx;
  color: #333;
  width: 120rpx;
}

.phone-value {
  flex: 1;
  font-size: 32rpx;
  color: #666;
}

/* 功能菜单区域 */
.menu-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.menu-item:active {
  background-color: #f5f5f5;
}

.menu-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}

.menu-icon image {
  width: 100%;
  height: 100%;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.menu-icon {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FFF3E0; /* 微信绿 */
  color: white;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-right: 30rpx;
}

.menu-arrow {
  font-size: 40rpx;
  color: #999;
}

/* 版本信息 */
.version-info {
  padding: 40rpx;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}