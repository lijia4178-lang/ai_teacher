/* 教师名单页面样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 标题栏样式 */
.page-header {
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  display: block;
  color: #333;
}






.filter-option.selected {
  color: #161616ff;
  background-color: #FFF3E0;
  border-color: #22b836ff;
}

.reset-button {
  margin-top: 10rpx;
  padding: 15rpx;
  background-color: #f0f0f0;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
}

.reset-button:active {
  background-color: #e0e0e0;
}

/* 教师列表样式 */
.teacher-list {
  padding: 20rpx;
}


/* 教师项样式 */
.teacher-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 15rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  transition: background-color 0.2s;
}

.teacher-item:active {
  background-color: #f5f5f5;
}

.teacher-info {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  flex: 1;
}
.tea-head{
  font-size:medium;
  color:rgb(202, 174, 50);

}
.info-font{
  width: 90rpx;
  font-weight: bold;

}
.tea-title{
  display: flex;
}
.tea-item{
  width: 200rpx;
}
.tea-desc{
  width: 200rpx;
}
.center-item{
  display: flex;
  justify-content: center;
}

.teacher-avatar {
  width: 100rpx;
  height: 100rpx;
  background-color: #FFF3E0;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.avatar-placeholder {
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.teacher-details {
  flex: 1;
}

.teacher-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #333;
}

.teacher-subject {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.teacher-meta {
  display: flex;
  gap: 30rpx;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #888;
}

.teacher-intro {
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 联系按钮 */
.contact-btn {
  align-self: flex-end;
  font-size: 26rpx;
  padding: 0 30rpx;
  margin-top: 10rpx;
}

/* 无结果提示 */
.no-result {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 箭头样式 */
.arrow-icon {
  margin-left: 10rpx;
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
}

.arrow-text {
  font-size: 40rpx;
  color: #999;
}